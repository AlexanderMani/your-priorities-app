doctype html
html(lang='en')
    head
        title Faceook Login Success
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    body
        p
            button.close(onclick='self.close()') Smelltu hér til að halda áfram / Press here to continue
        script(type='text/javascript').
            var iOS = /iPad|iPhone|iPod/.test(navigator.userAgent) && !window.MSStream;
            if (iOS) {
               console.log("iOS");
               setTimeout(self.close, 400);
            } else {
                try {
                    if (window && window.opener) {
                        window.opener.focus();
                        if (window.opener.appUser) {
                            window.opener.appUser.loginFromFacebook();
                            window.close();
                        } else {
                           window.close();
                    }
                } else {
                    window.close();
                    }
                }
                catch (err) {
                    window.close();
                }
            }
