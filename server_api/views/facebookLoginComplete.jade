doctype html
html(lang='en')
    head
        title Faceook Login Success
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    body
        script(type='text/javascript').
            try {
                if (window && window.opener) {
                    //window.opener.focus();
                    if (window.opener.appUser) {
                        window.opener.appUser.loginFromFacebook();
                        setTimeout(window.close, 420);
                    } else {
                        setTimeout(window.close, 420);
                    }
                } else {
                    setTimeout(window.close, 420);
                }
            }
            catch (err) {
                setTimeout(window.close, 420);
            }
