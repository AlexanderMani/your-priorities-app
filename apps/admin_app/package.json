    "core-js": "^3.6.5",
    "intl-messageformat": "^8.4.1",
    "lit-element": "2.4.0",
    "lit-flexbox-literals": "0.0.7",
    "lit-html": "1.3.0",
    "pwa-helpers": "^0.9.1",
    "lodash-es": "^4.17.15",
    "moment": "^2.27.0"
  }
